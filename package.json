{
  "repository": {
    "type": "git",
    "url": "https://github.com/rodclemen/color-inspector.git"
  },
  "homepage": "https://github.com/rodclemen/color-inspector",
  "bugs": {
    "url": "https://github.com/rodclemen/color-inspector/issues"
  },
  "description": "Track down every color in your codebase (via explicit imports). Swatches, copy-paste, jump-to-line, and usage â€” in the sidebar.",
  "license": "MIT",
  "name": "color-inspector",
  "displayName": "Color Inspector",
  "version": "0.0.6",
  "publisher": "rodclemen",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Visualization"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Color Inspector",
      "properties": {
        "colorInspector.autoScanMinutes": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 10,
          "description": "Auto-scan interval in minutes. 0 = Off. Range: 1-10."
        },
        "colorInspector.themeGroupsStartOpen": {
          "type": "boolean",
          "default": false,
          "description": "Theme groups (Dark/Light/Base/Other) start expanded when rendering the Color Inspector view."
        }
      }
    },
    "commands": [
      {
        "command": "color-inspector.scan",
        "title": "Color Inspector: Refresh"
      },
      {
        "command": "color-inspector.openSettings",
        "title": "Color Inspector: Open Settings"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "colorInspector",
          "title": "Color Inspector",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "colorInspector": [
        {
          "icon": "media/icon.svg",
          "id": "colorInspector.view",
          "name": "Color Inspector",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.19.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "color",
    "colors",
    "css",
    "scss",
    "sass",
    "theming",
    "palette",
    "variables",
    "hex",
    "rgba",
    "hsl",
    "rgb",
    "linters"
  ]
}